---
layout: null
---
{% capture base_tag %}<base href="{{ site.baseurl | prepend: site.url }}">{% endcapture %}{
	"version": "https://jsonfeed.org/version/1",
	"title": {{ site.title | jsonify }},
	"home_page_url": {{ site.baseurl | prepend: site.url | jsonify }},
	"feed_url": {{ "/feed.json" | prepend: site.baseurl | prepend: site.url | jsonify }},
	"description": {{ site.description | jsonify }},
    "icon": {{ site.logo | prepend: site.baseurl | prepend: site.url | jsonify }},
	"author": { "name": {{ site.author | jsonify }}},
	"items": [ {% assign my_posts = site.posts | sort: 'date' %}{% for post in my_posts reversed %} {
			"id": {{ post.id | jsonify }},
			"url": {{ post.url | prepend: site.baseurl | prepend: site.url | jsonify }},
			"title": {{ post.title | jsonify }},
			"content_html": {{ post.content | prepend: base_tag | jsonify }},
			"summary": {{ post.excerpt | strip_html | strip_newlines | jsonify}},
			"date_published": {{ post.date | date_to_xmlschema | jsonify }},
			"tags": {{ post.tags | jsonify }}
		}{% if forloop.last != true %},{% endif %}
		{% endfor %}
	]
}
